{
  "name": "tree-view",
  "version": "0.229.1",
  "main": "./lib/main",
  "description": "Explore and open files in the current project.",
  "repository": "https://github.com/pulsar-edit/pulsar",
  "license": "MIT",
  "engines": {
    "atom": "*",
    "node": ">=14"
  },
  "private": true,
  "dependencies": {
    "fs-plus": "^3.0.0",
    "minimatch": "~3.0.0",
    "pathwatcher": "^8.1.0",
    "temp": "~0.9.0",
    "underscore-plus": "^1.0.0"
  },
  "deserializers": {
    "TreeView": "getTreeViewInstance"
  },
  "consumedServices": {
    "atom.file-icons": {
      "versions": {
        "1.0.0": "consumeFileIcons"
      }
    },
    "file-icons.element-icons": {
      "versions": {
        "1.0.0": "consumeElementIcons"
      }
    }
  },
  "providedServices": {
    "tree-view": {
      "description": "A tree-like view of directories and files",
      "versions": {
        "1.0.0": "provideTreeView"
      }
    }
  },
  "configSchema": {
    "squashDirectoryNames": {
      "type": "boolean",
      "default": false,
      "title": "%tree-view.config.squashDirectoryNames.title%",
      "description": "%tree-view.config.squashDirectoryNames.description%"
    },
    "hideVcsIgnoredFiles": {
      "type": "boolean",
      "default": false,
      "title": "%tree-view.config.hideVcsIgnoredFiles.title%",
      "description": "%tree-view.config.hideVcsIgnoredFiles.description%"
    },
    "hideIgnoredNames": {
      "type": "boolean",
      "default": false,
      "description": "%tree-view.config.hideIgnoredNames.description%"
    },
    "sortFoldersBeforeFiles": {
      "type": "boolean",
      "default": true,
      "description": "%tree-view.config.sortFoldersBeforeFiles.description%"
    },
    "autoReveal": {
      "type": "boolean",
      "default": false,
      "description": "%tree-view.config.autoReveal.description%"
    },
    "focusOnReveal": {
      "type": "boolean",
      "default": true,
      "description": "%tree-view.config.focusOnReveal.description%"
    },
    "alwaysOpenExisting": {
      "type": "boolean",
      "default": false,
      "description": "%tree-view.config.alwaysOpenExisting.description%"
    },
    "hiddenOnStartup": {
      "type": "boolean",
      "default": false,
      "description": "%tree-view.config.hiddenOnStartup.description%"
    }
  }
}
