{
  "name": "grammar-selector",
  "version": "0.50.1",
  "main": "./lib/main",
  "description": "Select the grammar to use for the current editor with `ctrl-shift-L`.",
  "license": "MIT",
  "repository": "https://github.com/pulsar-edit/pulsar",
  "engines": {
    "atom": "*"
  },
  "dependencies": {
    "atom-select-list": "^0.7.0"
  },
  "consumedServices": {
    "status-bar": {
      "versions": {
        "^1.0.0": "consumeStatusBar"
      }
    }
  },
  "configSchema": {
    "showOnRightSideOfStatusBar": {
      "type": "boolean",
      "default": true,
      "description": "%grammar-selector.config.showOnRightSideOfStatusBar.description%"
    },
    "hideDuplicateTextMateGrammars": {
      "type": "boolean",
      "default": true,
      "title": "%grammar-selector.config.hideDuplicateTextMateGrammars.title%",
      "description": "%grammar-selector.config.hideDuplicateTextMateGrammars.description%"
    }
  }
}
