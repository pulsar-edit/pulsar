{
  "name": "whitespace",
  "version": "0.37.8",
  "main": "./lib/main",
  "description": "Strips trailing whitespace and adds a trailing newline when an editor is saved.",
  "repository": "https://github.com/pulsar-edit/pulsar",
  "license": "MIT",
  "engines": {
    "atom": "*"
  },
  "devDependencies": {
    "fs-plus": "2.x",
    "temp": "~0.8.1"
  },
  "configSchema": {
    "removeTrailingWhitespace": {
      "type": "boolean",
      "default": true,
      "scopes": {
        ".source.diff": {
          "default": false
        },
        ".source.jade": {
          "default": false
        },
        ".source.patch": {
          "default": false
        },
        ".source.pug": {
          "default": false
        }
      },
      "description": "%whitespace.config.removeTrailingWhitespace:description%"
    },
    "keepMarkdownLineBreakWhitespace": {
      "type": "boolean",
      "default": true,
      "description": "%whitespace.config.keepMarkdownLineBreakWhitespace:description%"
    },
    "ignoreWhitespaceOnCurrentLine": {
      "type": "boolean",
      "default": true,
      "description": "%whitespace.config.ignoreWhitespaceOnCurrentLine:description%"
    },
    "ignoreWhitespaceOnlyLines": {
      "type": "boolean",
      "default": false,
      "description": "%whitespace.config.ignoreWhitespaceOnlyLines:description%"
    },
    "ensureSingleTrailingNewline": {
      "type": "boolean",
      "default": true,
      "description": "%whitespace.config.ensureSingleTrailingNewline:description%"
    }
  }
}
