{
  "name": "bracket-matcher",
  "version": "0.92.0",
  "main": "./lib/main",
  "description": "Highlight the matching bracket for the `(){}[]` character under the cursor. Move the cursor to the matching bracket with `ctrl-m`.",
  "repository": "https://github.com/pulsar-edit/pulsar",
  "license": "MIT",
  "engines": {
    "atom": "*"
  },
  "dependencies": {
    "underscore-plus": "1.x"
  },
  "configSchema": {
    "autocompleteCharacters": {
      "description": "%bracket-matcher.config.autocompleteCharacters:description%",
      "type": "array",
      "default": [
        "()",
        "[]",
        "{}",
        "\"\"",
        "''",
        "``",
        "“”",
        "‘’",
        "«»",
        "‹›"
      ],
      "items": {
        "type": "string"
      }
    },
    "pairsWithExtraNewline": {
      "description": "%bracket-matcher.config.pairsWithExtraNewline:description%",
      "type": "array",
      "default": [
        "()",
        "[]",
        "{}"
      ],
      "items": {
        "type": "string"
      }
    },
    "autocompleteBrackets": {
      "type": "boolean",
      "default": true,
      "description": "%bracket-matcher.config.autocompleteBrackets:description%"
    },
    "wrapSelectionsInBrackets": {
      "type": "boolean",
      "default": true,
      "description": "%bracket-matcher.config.wrapSelectionsInBrackets:description%"
    },
    "highlightMatchingLineNumber": {
      "type": "boolean",
      "default": false,
      "description": "%bracket-matcher.config.highlightMatchingLineNumber:description%"
    },
    "alwaysSkipClosingPairs": {
      "type": "boolean",
      "default": false,
      "description": "%bracket-matcher.config.alwaysSkipClosingPairs:description%"
    }
  }
}
